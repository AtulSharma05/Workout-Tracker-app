# Backend Environment Configuration
# Development environment for Workout Tracker Backend

NODE_ENV=development
PORT=5000
API_VERSION=v1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/workout_tracker_db

# JWT Configuration
JWT_SECRET=workout_tracker_super_secret_key_for_development_2024
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=workout_tracker_refresh_secret_key_for_development_2024  
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for future use)
EMAIL_FROM=noreply@workouttracker.com
EMAIL_SERVICE=gmail
EMAIL_USERNAME=
EMAIL_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Security
BCRYPT_SALT_ROUNDS=12

# Session Configuration
SESSION_SECRET=workout_session_secret_key_development_2024